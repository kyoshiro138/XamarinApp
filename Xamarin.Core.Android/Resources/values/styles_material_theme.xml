<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="LightTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<!-- Android Theme -->
		<item name="colorPrimary">@color/c_primary_color500</item>
		<item name="colorPrimaryDark">@color/c_primary_color700</item>
		<item name="colorAccent">@color/c_primary_color500</item>
		<item name="alertDialogTheme">@style/DialogLightTheme</item>
		<item name="android:textColorPrimary">@color/c_text_black_87</item>
		<item name="android:colorButtonNormal">@color/c_primary_color500</item>

		<!-- Custom App Theme -->
		<item name="MaterialTextColor">@color/c_text_black_87</item>
		<item name="MaterialTextSecondaryColor">@color/c_text_black_54</item>
		<item name="MaterialTextHintColor">@color/c_text_black_38</item>
		<item name="MaterialTextDisabledColor">@color/c_text_black_38</item>
		<item name="MaterialDividerColor">@color/c_text_black_12</item>

		<!-- Custom Text Field Theme -->
		<item name="MaterialTextFieldLabelColor">@color/c_text_black_38</item>
		<item name="MaterialTextFieldLabelColorError">@color/c_text_error</item>
		<item name="MaterialTextFieldLabelColorPrimary">@color/c_primary_color500</item>
	</style>

	<style name="DarkTheme" parent="@style/Theme.AppCompat.NoActionBar">
		<!-- Android Theme -->
		<item name="colorPrimary">@color/c_primary_color500</item>
		<item name="colorPrimaryDark">@color/c_primary_color700</item>
		<item name="colorAccent">@color/c_primary_color500</item>
		<item name="alertDialogTheme">@style/DialogLightTheme</item>
		<item name="android:textColorPrimary">@color/c_text_white</item>
		<item name="android:colorButtonNormal">@color/c_primary_color500</item>
		
		<!-- Custom App Theme -->
		<item name="MaterialTextColor">@color/c_text_white</item>
		<item name="MaterialTextSecondaryColor">@color/c_text_white_70</item>
		<item name="MaterialTextHintColor">@color/c_text_white_30</item>
		<item name="MaterialTextDisabledColor">@color/c_text_white_30</item>
		<item name="MaterialDividerColor">@color/c_text_white_12</item>

		<!-- Custom Text Field Theme -->
		<item name="MaterialTextFieldLabelColor">@color/c_text_white_30</item>
		<item name="MaterialTextFieldLabelColorError">@color/c_text_error</item>
		<item name="MaterialTextFieldLabelColorPrimary">@color/c_primary_color500</item>
	</style>

	<style name="DialogLightTheme" parent="@style/Theme.AppCompat.Light.Dialog">
		<item name="colorPrimary">@color/c_primary_color500</item>
	    <item name="colorAccent">@color/c_primary_color500</item>
	</style>
	<style name="CustomButtonStyle" parent="android:Widget">
		<item name="android:textAppearance">?android:attr/textAppearanceButton</item>
	    <item name="android:minHeight">48dp</item>
	    <item name="android:minWidth">88dp</item>
	    <item name="android:focusable">true</item>
	    <item name="android:clickable">true</item>
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
</resources>
